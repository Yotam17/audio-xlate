# Audio Xlate Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: OpenAI Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL: ElevenLabs TTS Configuration
# =============================================================================
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# OPTIONAL: Google Cloud TTS Configuration
# =============================================================================
# Path to your Google Cloud service account JSON file
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# =============================================================================
# OPTIONAL: Cloudflare R2 Storage Configuration
# =============================================================================
# Get these from your Cloudflare R2 dashboard
R2_ACCOUNT_ID=your_r2_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_BUCKET_NAME=your_r2_bucket_name_here
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the FastAPI server
PORT=8000

# Host binding (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================
# Maximum file size for audio uploads (in bytes, default: 100MB)
MAX_AUDIO_FILE_SIZE=104857600

# Supported audio formats (comma-separated)
SUPPORTED_AUDIO_FORMATS=mp3,wav,flac,m4a,aac,ogg

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# OpenAI Whisper model to use (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Translation model (gpt-3.5-turbo, gpt-4, etc.)
TRANSLATION_MODEL=gpt-3.5-turbo

# TTS model for OpenAI (tts-1, tts-1-hd)
OPENAI_TTS_MODEL=tts-1

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Number of worker processes (for production)
WORKERS=1

# Enable/disable warmup process
ENABLE_WARMUP=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode (set to false in production)
DEBUG=true

# Enable auto-reload (set to false in production)
AUTO_RELOAD=true
